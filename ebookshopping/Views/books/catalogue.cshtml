@model IEnumerable<ebookshopping.Models.book>

@{
    ViewData["Title"] = "catalogue";
}
@{Layout = "~/Views/Shared/_Layout1.cshtml";}

<h1>catalogue</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.title
                    </div>
                    <div class="card-body">
                        <img src="~/images/@item.imgfile" height="150" /> <br/>
                        price:@item.price
                    </div>
                    <div class="card-footer">
                         <a asp-controller="orders" asp-action="Create" asp-route-id="@item.Id">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<body class="hold-transition catalogue-page">
     </body>
     <style>
.catalogue-page{
    background-image:url("https://logopond.com/logos/72af147abcd9126e6dac9c657cb54a14.png");
    background-repeat:no-repeat;
    background-size:cover;
}
     </style>